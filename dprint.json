{
	"lineWidth": 80,
	"indentWidth": 2,
	"useTabs": true,
	"typescript": {
		"semiColons": "always",
		"quoteStyle": "alwaysSingle",
		"nextControlFlowPosition": "nextLine"
	},
	"json": {},
	"markdown": {
		"textWrap": "always"
	},
	"excludes": [
		"**/node_modules",
		"**/*-lock.json",
		"dist",
		".netlify",
		".vercel"
	],
	"plugins": [
		"https://plugins.dprint.dev/typescript-0.88.3.wasm",
		"https://plugins.dprint.dev/json-0.19.0.wasm",
		"https://plugins.dprint.dev/markdown-0.16.2.wasm"
	]
}
