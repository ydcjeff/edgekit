{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"noEmit": true,
		"module": "ESNext",
		"target": "ESNext",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "Bundler"
	},
	"include": ["**/*.js", "**/*.ts", "**/*.vue"],
	"exclude": ["**/node_modules/**", "**/dist/**"]
}
